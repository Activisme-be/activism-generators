#!/usr/bin/env php
<?php

use ActivismeBe\Artillery\Commands\ControllerCommand;
use ActivismeBe\Artillery\Commands\ModelCodeigniterCommand;
use ActivismeBe\Artillery\Commands\ModelEloquentCommand;
use Symfony\Component\Console\Application;

ini_set('display_errors', 1);
ini_set('display_startup_errors', 1);
error_reporting(E_ALL);

require __DIR__ . '/vendor/autoload.php';

$shell = new Application('Artillery', 'v1.0.0-dev');

$shell->add(new ControllerCommand());
$shell->add(new ModelCodeigniterCommand());
$shell->add(new ModelEloquentCommand());
// $shell->add(new \ActivismeBe\Artillery\Commands\CreateHelperCommand());
// $shell->add(new \ActivismeBe\Artillery\Commands\CreateLiibraryCommand());
// $shell->add(new \ActivismeBe\Artillery\Commands\CreateLicenseCommand());
// $shell->add(new \ActivismeBe\Artillery\Commands\CreateAuthCommand());

$shell->run();
